{
    "name": "Django + uv",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "settings": {
      "python.defaultInterpreterPath": "/usr/local/bin/python"
    },
    "postCreateCommand": "uv sync",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.debugpy",
          "ms-python.black-formatter"
        ]
      }
    },
    "forwardPorts": [8000],
    "remoteUser": "vscode"
  }
  